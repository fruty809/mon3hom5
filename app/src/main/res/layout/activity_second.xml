<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondActivity">


    <ImageView
        android:id="@+id/img_second_activity"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="410dp"
        android:layout_height="410dp"
        android:background="@drawable/photo1671985196"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-15dp">


    </ImageView>

    <TextView
        android:id="@+id/result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        app:layout_constraintTop_toBottomOf="@id/img_second_activity"
        app:layout_constraintStart_toStartOf="@id/img_second_activity"
        app:layout_constraintEnd_toEndOf="@id/img_second_activity"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/result2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text"
        app:layout_constraintTop_toBottomOf="@id/result1"
        app:layout_constraintStart_toStartOf="@id/result1"
        app:layout_constraintEnd_toEndOf="@id/result1"
        android:layout_marginTop="20dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>